{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "title": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "source": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "uniqueItems": true
    },
    "introduction": {
      "type": "object",
      "properties": {
        "title": {"$ref": "#/definitions/title"},
        "tags": {"$ref": "#/definitions/tags"},
        "content": {"$ref": "#/definitions/content"}
      },
      "required": ["title", "content"]
    },
    "content": {
      "type": "array",
      "items": {
        "type": "object",
        "minItems": 1,
        "oneOf": [
          { "$ref": "#/definitions/section" },
          { "$ref": "#/definitions/list" },
          { "$ref": "#/definitions/table" },
          { "$ref": "#/definitions/block" },
          { "$ref": "#/definitions/inline" }
        ]
      }
    },
    "section": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["section"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "title": {"$ref": "#/definitions/title"},
        "content": {"$ref": "#/definitions/content"}
      },
      "required": ["content_type", "title", "content"]
    },
    "list": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["unordered_list", "ordered_list"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "minItems": 1,
            "oneOf": [
              { "$ref": "#/definitions/list_item" }
            ]
          }
        }
      },
      "required": ["content_type", "content"]
    },
    "list_item": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["list_item"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "content": {"$ref": "#/definitions/content"}
      },
      "required": ["content_type", "content"]
    },
    "table": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["table"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "caption": {
          "type": "object",
          "properties": {
            "content_type": {
              "type": "string",
              "enum": ["caption"]
            },
            "content": {
              "type": "array",
              "items": {
                "type": "object",
                "oneOf": [
                  { "$ref": "#/definitions/section" },
                  { "$ref": "#/definitions/list" },
                  { "$ref": "#/definitions/inline" }
                ]
              }
            }
          },
          "required": ["content_type", "content"]
        },
        "head": {"$ref": "#/definitions/table_block"},
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "minItems": 1,
            "oneOf": [
              { "$ref": "#/definitions/table_block" },
              { "$ref": "#/definitions/table_row" }
            ]
          }
        },
        "foot": {"$ref": "#/definitions/table_block"}
      },
      "required": ["content_type", "content"]
    },
    "table_block": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["table_block"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "minItems": 1,
            "oneOf": [
              { "$ref": "#/definitions/table_row" }
            ]
          }
        }
      },
      "required": ["content_type", "content"]
    },
    "table_row": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["table_row"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "minItems": 1,
            "oneOf": [
              { "$ref": "#/definitions/table_header_cell" },
              { "$ref": "#/definitions/table_data_cell" }
            ]
          }
        }
      },
      "required": ["content_type", "content"]
    },
    "table_header_cell": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["table_header_cell"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "colspan": {"$ref": "#/definitions/table_span"},
        "rowspan": {"$ref": "#/definitions/table_span"},
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "minItems": 1,
            "oneOf": [
              { "$ref": "#/definitions/list" },
              { "$ref": "#/definitions/block" },
              { "$ref": "#/definitions/inline" }
            ]
          }
        }
      },
      "required": ["content_type", "content"]
    },
    "table_data_cell": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["table_data_cell"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "colspan": {"$ref": "#/definitions/table_span"},
        "rowspan": {"$ref": "#/definitions/table_span"},
        "content": {"$ref": "#/definitions/content"}
      },
      "required": ["content_type", "content"]
    },
    "table_span": {
      "type": "number",
      "exclusiveMinimum": 1
    },
    "block": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["block"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "content": {
          "type": "string"
        }
      },
      "required": ["content_type", "content"]
    },
    "inline": {
      "type": "object",
      "properties": {
        "content_type": {
          "type": "string",
          "enum": ["inline"]
        },
        "tags": {"$ref": "#/definitions/tags"},
        "source": {"$ref": "#/definitions/source"},
        "content": {
          "type": "string"
        }
      },
      "required": ["content_type", "content"]
    }
  },
  "type": "object",
  "properties": {
    "title": {"$ref": "#/definitions/title"},
    "introduction": {"$ref": "#/definitions/introduction"},
    "standards": {
      "type": "object",
      "properties": {
        "title": {"$ref": "#/definitions/title"},
        "tags": {"$ref": "#/definitions/tags"},
        "content": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "title": {"$ref": "#/definitions/title"},
              "tags": {"$ref": "#/definitions/tags"},
              "introduction": {"$ref": "#/definitions/introduction"},
              "relatedguidelines": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "guidelines": {
                "type": "object",
                "properties": {
                  "title": {"$ref": "#/definitions/title"},
                  "tags": {"$ref": "#/definitions/tags"},
                  "content": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "minItems": 1,
                      "properties": {
                        "title": {"$ref": "#/definitions/title"},
                        "tags": {"$ref": "#/definitions/tags"},
                        "introduction": {"$ref": "#/definitions/introduction"},
                        "checklist": {
                          "type": "object",
                          "properties": {
                            "title": {"$ref": "#/definitions/title"},
                            "tags": {"$ref": "#/definitions/tags"},
                            "content": {"$ref": "#/definitions/content"}
                          },
                          "required": ["title", "content"]
                        },
                        "guides": {
                          "type": "object",
                          "properties": {
                            "title": {"$ref": "#/definitions/title"},
                            "tags": {"$ref": "#/definitions/tags"},
                            "content": {"$ref": "#/definitions/content"}
                          },
                          "required": ["title", "content"]
                        },
                        "solutions": {
                          "type": "object",
                          "properties": {
                            "title": {"$ref": "#/definitions/title"},
                            "tags": {"$ref": "#/definitions/tags"},
                            "content": {"$ref": "#/definitions/content"}
                          },
                          "required": ["title", "content"]
                        },
                        "similar": {
                          "type": "object",
                          "properties": {
                            "title": {"$ref": "#/definitions/title"},
                            "tags": {"$ref": "#/definitions/tags"},
                            "content": {"$ref": "#/definitions/content"}
                          },
                          "required": ["title", "content"]
                        }
                      }
                    }
                  }
                },
                "required": ["title", "content"]
              }
            },
            "required": ["title", "introduction", "guidelines"]
          }
        }
      },
      "required": ["title", "content"]
    }
  },
  "required": ["title", "introduction", "standards"]
}

